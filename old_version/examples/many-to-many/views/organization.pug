doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{title} - Organization
    link(rel="stylesheet", href="/css/human-agent-chat.css")
    link(rel="stylesheet", href="/css/organization.css")
    script(src="/htmx/htmx.min.js")
  body
    .container
      nav.sidebar
        .org-header
          h1.org-name #{organization.name}
        
        .user-info
          if user.photoURL
            img.user-avatar(src=user.photoURL, alt=user.displayName)
          else
            .user-avatar-initials #{user.displayName.split(' ').map(n => n[0]).join('').substring(0, 2).toUpperCase()}
          .user-name #{user.displayName}
        
        .section
          .section-header Channels
          ul.channel-list
            each channel in channels
              li.channel-item
                a(href=`/channel/${channel.id}`) # #{channel.name}
        
        .section
          .section-header Departments
          ul.department-list
            each department in departments
              li.department-item
                a(href=`/department/${department.id}`) @ #{department.name}
      
      main.content
        .welcome-screen
          .welcome-content
            h1 Welcome to #{organization.name}
            p.subtitle Organization-wide communication platform
            
            .welcome-cards
              .card
                h3 Channels
                p Organization-wide public conversations
                a.btn(href=`/channel/general`) Join General Channel
              
              .card
                h3 Departments
                p Department-specific discussions
                a.btn(href=`/department/marketing`) Join Marketing
              
              .card
                h3 AI Assistant
                p Get help from our AI assistant
                button.btn#ask-ai Ask Assistant
            
            .welcome-features
              h3 Key Features
              ul
                li Hierarchical access control with consistent membership model
                li Multi-modal messaging (text, images, videos, documents)
                li Zod-powered interactive forms for structured data collection
                li Easy integration with AI assistants
                li Dark mode interface optimized for productivity

      footer
        p HumanAgentChat Â© 2023
    
    // Initialize welcome screen
    script.
      document.addEventListener('DOMContentLoaded', () => {
        const askAiButton = document.getElementById('ask-ai');
        if (askAiButton) {
          askAiButton.addEventListener('click', () => {
            window.location.href = '/channel/general';
          });
        }
      });